<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#fff"

    >
    <RelativeLayout
        android:id="@+id/list_relative"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_10"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_105"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_10"
        android:elevation="@dimen/dp_4"
        android:background="@drawable/list_top_bg"
        >
        <LinearLayout
            android:id="@+id/list_linear_all"
            android:orientation="vertical"
            android:layout_width="@dimen/dp_58"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/list_all_image"
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@mipmap/list_top_all_orders"
                />
            <TextView
                android:id="@+id/list_all_text"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#666"
                android:text="全部订单"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/list_linear_obligation"
            android:layout_toRightOf="@id/list_linear_all"
            android:orientation="vertical"
            android:layout_width="@dimen/dp_58"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/list_obligation_image"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@mipmap/list_top_obligation"
                />
            <TextView
                android:id="@+id/list_obligation_text"
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@+id/list_obligation_image"
                android:textSize="@dimen/sp_12"
                android:textColor="#666"
                android:text="待付款"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/list_linear_wait"
            android:orientation="vertical"
            android:layout_toRightOf="@id/list_linear_obligation"
            android:layout_width="@dimen/dp_58"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/list_wait_image"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@mipmap/list_top_wait"
                />
            <TextView
                android:id="@+id/list_wait_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/sp_12"
                android:textColor="#666"
                android:text="待收货"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/list_linear_remain"
            android:layout_toRightOf="@id/list_linear_wait"
            android:orientation="vertical"
            android:layout_width="@dimen/dp_58"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/list_remain_image"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@mipmap/list_top_remain"
                />
            <TextView
                android:id="@+id/list_remain_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/sp_12"
                android:textColor="#666"
                android:text="待评价"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/list_linear_completed"
            android:orientation="vertical"
            android:layout_toRightOf="@id/list_linear_remain"
            android:layout_width="@dimen/dp_58"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/list_completed_image"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@mipmap/list_top_completed"
                />
            <TextView
                android:id="@+id/list_completed_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/sp_12"
                android:textColor="#666"
                android:text="已完成"
                />
        </LinearLayout>
    </RelativeLayout>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:layout_below="@+id/list_relative"
        android:id="@+id/list_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_80"
        />

</RelativeLayout>