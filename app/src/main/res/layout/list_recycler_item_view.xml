<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_312"
    android:layout_height="wrap_content"
    android:elevation="@dimen/dp_3"
    android:background="@drawable/list_top_bg"
    android:layout_marginBottom="@dimen/dp_5"
    android:layout_marginTop="@dimen/dp_5"
    android:padding="@dimen/dp_10"
    >
    <TextView
        android:id="@+id/list_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单号"
        android:layout_marginBottom="@dimen/dp_10"
        android:textColor="#666"
        android:textSize="@dimen/sp_12"
        android:layout_marginRight="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/list_item_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/list_code"
        android:textColor="#666"
        android:textSize="@dimen/sp_12"
        />
    <TextView
        android:id="@+id/list_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#666"
        android:textSize="@dimen/sp_12"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/list_code"
        android:id="@+id/list_item_recycler"
        android:layout_width="@dimen/dp_292"
        android:layout_height="wrap_content"/>
</RelativeLayout>