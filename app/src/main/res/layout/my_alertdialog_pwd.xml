<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    >
    <TextView
        android:id="@+id/updata_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="修改密码"
        android:textSize="@dimen/sp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="#f00"
        />
    <TextView
        android:id="@+id/old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/updata_text"
        android:text="旧密码:"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        />
    <EditText
        android:id="@+id/old_edix"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_30"
        android:layout_below="@+id/updata_text"
        android:layout_toRightOf="@+id/old"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/alertdalog_edit_shape"
        android:layout_marginLeft="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_5"
        android:layout_alignBottom="@id/old"
        android:layout_alignTop="@id/old"
        />
    <TextView
        android:id="@+id/new_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/old"
        android:text="新密码:"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        />
    <EditText
        android:id="@+id/new_edix"
        android:layout_width="@dimen/dp_200"
        android:layout_height="@dimen/dp_30"
        android:layout_below="@+id/updata_text"
        android:layout_toRightOf="@+id/new_name"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/alertdalog_edit_shape"
        android:layout_marginLeft="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_5"
        android:layout_alignBottom="@id/new_name"
        android:layout_alignTop="@id/new_name"
        />

</RelativeLayout>