<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PersonNewActivity">

    <TextView
        android:id="@+id/my_person_new_title"
        android:text="我的资料"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="#666"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_165"
        android:layout_below="@+id/my_person_new_title"
        android:elevation="@dimen/dp_4"
        android:padding="@dimen/dp_20"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:background="@drawable/my_person_new_bg"
        >
        <RelativeLayout
            android:id="@+id/my_person_new_navator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/my_person_new_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的头像"
                android:textColor="#666"
                android:textSize="@dimen/sp_16"
                android:layout_marginBottom="@dimen/dp_10"
                />
            <ImageView
                android:id="@+id/my_person_new_image"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_alignParentRight="true"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2"
                android:layout_below="@+id/my_person_new_text"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/my_pet_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/my_pet_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的昵称"
                android:textColor="#666"
                android:textSize="@dimen/sp_16"
                android:layout_marginBottom="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/my_pet_name_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_12"
                android:textColor="#999"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2"
                android:layout_below="@+id/my_pet_name_text"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/my_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            >
            <TextView
                android:id="@+id/my_pwd_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的密码"
                android:textColor="#666"
                android:textSize="@dimen/sp_16"
                android:layout_marginBottom="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/my_pwd_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/sp_12"
                android:textColor="#999"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f2f2f2"
                android:layout_below="@+id/my_pwd_text"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>