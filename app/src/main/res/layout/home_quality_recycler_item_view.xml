<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/home_quality_relative"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_174"
        android:padding="@dimen/dp_10"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/login_btn_bg"
        android:elevation="@dimen/dp_3"
        >

        <ImageView
            android:id="@+id/quality_image"
            android:layout_width="@dimen/dp_131"
            android:layout_height="@dimen/dp_102" />
        <TextView
            android:id="@+id/quality_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/quality_image"
            android:layout_alignRight="@id/quality_image"
            android:layout_below="@+id/quality_image"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/sp_12"
            android:textColor="#666"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/quality_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/quality_title"
            android:textColor="#f00"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/sp_14"
            />
    </RelativeLayout>

</RelativeLayout>