<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_24"
    android:layout_marginRight="@dimen/dp_24"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:elevation="@dimen/dp_4"
    android:paddingTop="@dimen/dp_20"
    android:paddingRight="@dimen/dp_20"
    android:paddingLeft="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_10"
    android:background="@drawable/list_top_bg"
    >
    <TextView
        android:id="@+id/address_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="#666"
        />
    <TextView
        android:id="@+id/address_tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/address_name"
        android:textSize="@dimen/sp_12"
        android:textColor="#666"
        />
    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/address_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/address_name"
        />
    <View
        android:id="@+id/address_view"
        android:layout_below="@+id/address_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#f2f2f2"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        />
    <RadioButton
        android:id="@+id/address_radio"
        android:layout_below="@+id/address_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置为默认地址"
        android:textColor="#666"
        android:textSize="@dimen/sp_12"
        />
    <Button
        android:id="@+id/address_del"
        android:layout_width="@dimen/dp_50"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/address_view"
        android:textSize="@dimen/sp_10"
        android:textColor="#666"
        android:layout_alignBottom="@id/address_radio"
        android:layout_alignTop="@id/address_radio"
        android:background="@drawable/address_button_del_bg"
        android:text="删除"
        />
    <Button
        android:id="@+id/address_updata"
        android:layout_width="@dimen/dp_50"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/address_del"
        android:layout_below="@id/address_view"
        android:textSize="@dimen/sp_10"
        android:textColor="#666"
        android:layout_alignBottom="@id/address_radio"
        android:layout_alignTop="@id/address_radio"
        android:layout_marginRight="@dimen/dp_5"
        android:text="修改"
        android:background="@drawable/address_button_del_bg"
        />
</RelativeLayout>