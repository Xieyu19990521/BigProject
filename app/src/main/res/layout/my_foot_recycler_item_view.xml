<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10"
    android:layout_margin="@dimen/dp_5"
    android:id="@+id/foot_relative"
    android:background="@drawable/my_foot_recycler_item_bg"
    android:elevation="@dimen/dp_4">
    <ImageView
        android:id="@+id/foot_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/foot_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/foot_image"
        android:layout_alignRight="@id/foot_image"
        android:layout_below="@+id/foot_image"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/sp_10"
        android:textColor="#666"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/foot_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foot_title"
        android:textColor="#ff1616"
        android:textSize="@dimen/sp_12"
        />
    <TextView
        android:id="@+id/foot_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_10"
        android:textColor="#666"
        android:layout_alignRight="@id/foot_image"
        android:layout_alignBottom="@id/foot_price"/>
    <TextView
        android:id="@+id/foot_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_10"
        android:textColor="#666"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignRight="@id/foot_image"
        android:layout_below="@+id/foot_num"
        />
</RelativeLayout>