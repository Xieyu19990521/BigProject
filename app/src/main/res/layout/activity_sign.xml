<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignActivity">

    <ImageView
        android:id="@+id/sign_phone"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_alignLeft="@id/view1"
        android:layout_marginTop="@dimen/dp_160"
        android:background="@mipmap/login_icon_phone"
        />
    <EditText
        android:id="@+id/sign_tels"
        android:layout_toRightOf="@+id/sign_phone"
        android:layout_marginTop="@dimen/dp_160"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20"
        android:background="@null"
        android:hint="手机号"
        android:maxLength="11"
        android:textSize="@dimen/sp_18"
        android:inputType="number"
        android:textColorHint="#fff"
        android:textColor="#fff"
        />
    <View
        android:id="@+id/view1"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/sign_tels"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="#fff"
        />
    <ImageView
        android:id="@+id/sign_verification"
        android:layout_below="@id/view1"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"
        android:layout_alignLeft="@id/view1"
        android:background="@mipmap/login_icon_verification"
        />
    <EditText
        android:id="@+id/sign_code"
        android:layout_below="@id/view1"
        android:layout_toRightOf="@+id/sign_phone"
        android:layout_width="@dimen/dp_190"
        android:layout_height="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20"
        android:background="@null"
        android:hint="验证码"
        android:textSize="@dimen/sp_18"
        android:maxLength="6"
        android:inputType="number"
        android:textColorHint="#fff"
        android:textColor="#fff"
        />
    <TextView
        android:id="@+id/sign_get_code"
        android:layout_toRightOf="@+id/sign_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        android:textSize="@dimen/sp_14"
        android:layout_alignBottom="@+id/sign_code"
        android:textColor="#fff"
        />
    <View
        android:id="@+id/view2"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/sign_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="#fff"
        />
    <ImageView
        android:layout_below="@+id/view2"
        android:id="@+id/sign_lock"
        android:layout_width="@dimen/dp_20"
        android:layout_alignLeft="@id/view1"
        android:layout_height="@dimen/dp_20"
        android:background="@mipmap/login_icon_lock"
        />
    <EditText
        android:id="@+id/sign_password"
        android:layout_toRightOf="@+id/sign_lock"
        android:paddingLeft="@dimen/dp_20"
        android:layout_below="@id/view2"
        android:layout_width="@dimen/dp_230"
        android:layout_height="@dimen/dp_20"
        android:background="@null"
        android:hint="登录密码"
        android:textSize="@dimen/sp_18"
        android:inputType="textPassword"
        android:textColorHint="#fff"
        android:textColor="#fff"
        />
    <ImageView
        android:id="@+id/sign_eye"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_20"
        android:background="@mipmap/login_icon_eye"
        android:layout_toRightOf="@+id/sign_password"
        android:layout_alignBottom="@+id/sign_password"
        />
    <View
        android:id="@+id/view3"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_1"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sign_password"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#fff"
        />

    <TextView
        android:id="@+id/fast_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_alignRight="@+id/view3"
        android:layout_below="@id/view3"
        android:layout_alignBottom="@+id/login_rem"
        android:textSize="@dimen/sp_14"
        android:text="已有账号？立即登录"
        android:textColor="#fff"
        />
    <Button
        android:id="@+id/sign_but"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_alignLeft="@id/view1"
        android:layout_alignRight="@id/view1"
        android:text="注册"
        android:layout_below="@+id/fast_login"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/dp_50"
        android:textColor="#ff5f71"
        android:background="@drawable/login_btn_bg"
        android:layout_marginBottom="@dimen/dp_120"
        />

</RelativeLayout>