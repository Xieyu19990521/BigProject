<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/shop_car_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="购物车"
        android:textSize="@dimen/sp_16"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_5"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/shop_car_title"
        android:id="@+id/shopcar_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_105"
        />
    <LinearLayout
        android:id="@+id/shopcar_bottom"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_55"
        >
        <CheckBox
            android:id="@+id/check_all"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_50"
            android:text="全选"
            android:textColor="#666"
            android:textSize="@dimen/sp_12"
            android:layout_marginRight="@dimen/dp_20"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计："
            android:layout_gravity="center_vertical"
            android:textColor="#666"
            android:textSize="@dimen/sp_12"
            />
        <TextView
            android:id="@+id/shop_car_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0.0"
            android:textColor="#ff0606"
            android:textSize="@dimen/sp_16"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>
    <Button
        android:layout_width="@dimen/dp_118"
        android:layout_height="@dimen/dp_50"
        android:text="去结算"
        android:textColor="#fff"
        android:textSize="@dimen/sp_16"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/shopcar_bottom"
        android:background="#ff5e70"/>
</RelativeLayout>