<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
        <ImageView
            android:layout_marginTop="@dimen/dp_20"
            android:id="@+id/backgroud_image"
            android:layout_width="@dimen/dp_312"
            android:layout_centerHorizontal="true"
            android:layout_height="@dimen/dp_160"
            android:background="@mipmap/my_wallet"
            />
        <TextView
            android:id="@+id/text_price_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额"
            android:textColor="#343434"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_50"
            />
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100.00"
            android:layout_below="@+id/text_price_name"
            android:textColor="#343434"
            android:textSize="64sp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_50" />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentTop="true"
        android:id="@+id/my_wallet_linear"
        android:layout_marginTop="@dimen/dp_156"
        android:layout_below="@+id/backgroud_image"
        android:elevation="@dimen/dp_2"
        android:background="#fff"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/consumption_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="#666666"
            android:text="消费金额"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/dp_65"
            />
        <View
            android:id="@+id/view_one"
            android:layout_width="@dimen/dp_2"
            android:layout_height="@dimen/dp_20"
            android:background="#ccc"
            android:layout_gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/consumption_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:textColor="#666666"
            android:text="消费时间"
            android:layout_weight="1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="@dimen/dp_65"
            />
    </LinearLayout>
    <View
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_1"
        android:background="#ccc"
        android:layout_marginTop="@dimen/dp_156"
        android:layout_centerHorizontal="true"
        />
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/my_wallet_xrecyclerview"
        android:layout_below="@id/my_wallet_linear"
        android:layout_width="@dimen/dp_312"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>