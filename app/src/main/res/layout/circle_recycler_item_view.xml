<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_shadow_item"
        android:padding="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:elevation="3dp"
        android:outlineSpotShadowColor="#ccc"
        >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/circle_simple"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            fresco:roundAsCircle="true"
            />
        <TextView
            android:id="@+id/circle_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/circle_simple"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:textColor="#666"
            />
        <TextView
            android:id="@+id/circle_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/circle_name"
            android:layout_alignBottom="@+id/circle_name"
            android:textSize="@dimen/sp_10"
            android:gravity="center"
            android:textColor="#666"
            />
        <TextView
            android:id="@+id/circle_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_12"
            android:textColor="#666"
            android:layout_below="@+id/circle_simple"
            />
        <ImageView
            android:id="@+id/circle_image"
            android:layout_below="@+id/circle_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/circle_num"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@+id/circle_image"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="#666"
            android:layout_marginRight="@dimen/dp_24"
            android:paddingLeft="@dimen/dp_30"
            />
        <ImageView
            android:id="@+id/circle_prise"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@+id/circle_image"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_alignLeft="@+id/circle_num"
            />
    </RelativeLayout>
</RelativeLayout>