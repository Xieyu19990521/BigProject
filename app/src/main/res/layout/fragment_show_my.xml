<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/my_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/my_background"
        />
    <LinearLayout
        android:id="@+id/my_person_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_142"
        android:orientation="vertical"
        android:background="@drawable/my_person_bg"
        android:paddingLeft="@dimen/dp_24"
        android:paddingRight="@dimen/dp_24"
        >
        <RelativeLayout
            android:id="@+id/my_person_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_120"
            >
            <ImageView
                android:id="@+id/my_person_new_image"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:background="@mipmap/my_icon_information_n"
                />
            <TextView
                android:id="@+id/my_person_new_text"
                android:layout_toRightOf="@+id/my_person_new_image"
                android:layout_width="@dimen/dp_267"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:text="个人资料"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_alignParentRight="true"
                />
            <View
                android:layout_toRightOf="@id/my_person_new_image"
                android:layout_width="@dimen/dp_267"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="#ededed"
                android:layout_below="@+id/my_person_new_image"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/my_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            >
            <ImageView
                android:id="@+id/my_circle_image"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:background="@mipmap/my_icon_circle"
                />
            <TextView
                android:id="@+id/my_circle_text"
                android:layout_toRightOf="@+id/my_circle_image"
                android:layout_width="@dimen/dp_267"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:text="我的圈子"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_alignParentRight="true"
                />
            <View
                android:layout_toRightOf="@id/my_circle_image"
                android:layout_width="@dimen/dp_267"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="#ededed"
                android:layout_below="@+id/my_circle_image"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/my_foot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            >
            <ImageView
                android:id="@+id/my_foot_image"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:background="@mipmap/my_icon_foot_n"
                />
            <TextView
                android:id="@+id/my_foot_text"
                android:layout_toRightOf="@+id/my_foot_image"
                android:layout_width="@dimen/dp_267"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:text="我的足迹"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_alignParentRight="true"
                />
            <View
                android:layout_toRightOf="@id/my_foot_image"
                android:layout_width="@dimen/dp_267"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="#ededed"
                android:layout_below="@+id/my_foot_image"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/my_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            >
            <ImageView
                android:id="@+id/my_wallet_image"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:background="@mipmap/my_icon_wallet_n"
                />
            <TextView
                android:id="@+id/my_wallet_text"
                android:layout_toRightOf="@+id/my_wallet_image"
                android:layout_width="@dimen/dp_267"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:text="我的钱包"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_alignParentRight="true"
                />
            <View
                android:layout_toRightOf="@id/my_wallet_image"
                android:layout_width="@dimen/dp_267"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="#ededed"
                android:layout_below="@+id/my_wallet_image"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/my_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            >
            <ImageView
                android:id="@+id/my_address_image"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:background="@mipmap/my_icon_address_n"
                />
            <TextView
                android:id="@+id/my_address_text"
                android:layout_toRightOf="@+id/my_address_image"
                android:layout_width="@dimen/dp_267"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:text="我的收货地址"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_alignParentRight="true"
                />
            <View
                android:layout_toRightOf="@id/my_address_image"
                android:layout_width="@dimen/dp_267"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="#ededed"
                android:layout_below="@+id/my_address_image"
                />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/my_avatar"
        android:layout_marginTop="@dimen/dp_102"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/my_pet_name"
        android:layout_below="@+id/my_avatar"
        android:layout_width="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="#666"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>